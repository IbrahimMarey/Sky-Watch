<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="weather_text_view_style">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/textColor</item>
<!--        <item name="android:fontFamily">@font/cairo_bold</item>-->
        <item name="android:textSize">16sp</item>
    </style>

    <style name="toggleStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
<!--        <item name="strokeColor">@color/custom_color_selector</item>-->
    </style>

    <style name="weather_label_style">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/textColorAAOpacity</item>
<!--        <item name="android:fontFamily">@font/cairo_bold</item>-->
        <item name="android:textSize">16sp</item>
    </style>
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">#AFC6D9</item>
    </style>

    <style name="Widget.App.ExtendedFloatingActionButton" parent="Widget.Material3.ExtendedFloatingActionButton.Icon.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.FloatingActionButton</item>
    </style>

    <style name="Widget.App.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.FloatingActionButton</item>
    </style>

    <style name="ThemeOverlay.App.FloatingActionButton" parent="">
        <item name="colorContainer">@color/textColor</item>
        <item name="colorOnContainer">@color/background</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/textColor</item>
        <item name="android:textColor">@color/black</item>
    </style>



</resources>